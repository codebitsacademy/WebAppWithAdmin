@model UserDeleteViewModel
@{
    ViewData["Title"] = "Remove User Account";
}

<div class="row">
    <div class="col-md-7">
        <div class="modal-header">
            <h4 class="modal-title" id="myCenterModalLabel">Remove User Account</h4>
        </div>
        <div class="mt-3">
                <div class="alert alert-danger" role="alert">
                    <h6>Are you sure you want to remove @Model.FirstName @Model.LastName's account?</h6>
                </div>


            <form method="post" asp-action="delete">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                </div>                

                <div class="text-right">
                    <button type="submit" class="btn btn-danger btn-block waves-effect waves-light">Remove Accocunt</button>
                </div>
            </form>
        </div>
    </div><!-- /.modal -->
</div>
